@page
@model Dotnet_Demo.Pages_Student.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Sinh Viên</h1>

<p>
    <a asp-page="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].StudentName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Student)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Sửa</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Chi Tiết</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
